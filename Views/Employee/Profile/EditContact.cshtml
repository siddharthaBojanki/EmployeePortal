@using EmployeePortal.ViewModels.EmployeeViewModels
@model EditContactModel
@{
    ViewData["Title"] = "Edit Contact";
}
<style>
    .page-heading {
        color: #005B99; /* Primary Theme Color */
        font-weight: 700;
        letter-spacing: -0.5px;
        font-size: 1.35rem;
    }
</style>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        
        <div class="card shadow-sm border mb-4">
            <div class="card-body p-4 p-md-5">

                <div class="text-center mb-4">
                    <div class="d-inline-flex align-items-center justify-content-center mb-3" 
                         style="width: 60px; height: 60px; background-color: #E6F2FA; color: #005B99; border-radius: 50%;">
                        <i class="bi bi-person-lines-fill fs-3"></i>
                    </div>
                    <h3 class="fw-bold page-heading">Edit Contact Info</h3>
                    <p class="text-muted small">Update your phone number and residential address.</p>
                </div>

                <form asp-action="EditContact" method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small mb-4" role="alert"></div>

                    <div class="mb-4">
                        <label asp-for="Phone" class="form-label fw-semibold text-secondary small text-uppercase">Phone Number</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-telephone"></i></span>
                            <input asp-for="Phone" class="form-control border-start-0 ps-0" placeholder="+1 (555) 000-0000" />
                        </div>
                        <span asp-validation-for="Phone" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Address" class="form-label fw-semibold text-secondary small text-uppercase">Address</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-geo-alt"></i></span>
                            <textarea asp-for="Address" 
                                      class="form-control border-start-0 ps-0" 
                                      rows="3" 
                                      style="resize: none;"
                                      placeholder="Enter your full address..."></textarea>
                        </div>
                        <span asp-validation-for="Address" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="d-grid gap-2 mt-5">
                        <button type="submit" class="btn btn-primary fw-semibold py-2">
                            Save Changes
                        </button>
                        <a asp-action="Profile" class="btn btn-light border text-muted">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}