@model EmployeePortal.ViewModels.EmployeeViewModels.MyProjectsViewModel.ProjectAssignmentDto
@{
    ViewData["Title"] = "Project Details";
}

<style>
    /* Reuse Modern Header Style */
    .card-header-modern {
        background-color: #f8fafc;
        border-bottom: 1px solid #e2e8f0;
        padding: 1.5rem;
        border-radius: 10px 10px 0 0;
    }

    .page-heading {
        color: #005B99;
        font-weight: 700;
        letter-spacing: -0.5px;
        font-size: 1.35rem;
    }

    /* Detail Labels */
    .detail-label {
        color: #64748b;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.5px;
        margin-bottom: 4px;
    }

    .detail-value {
        color: #0f172a;
        font-weight: 500;
        font-size: 1rem;
    }

    /* Action Box */
    .action-box {
        background-color: #FFFBEB; /* Soft Yellow for 'Warning' actions */
        border: 1px solid #FCD34D;
        border-radius: 8px;
    }
</style>

<div class="row justify-content-center">
    <div class="col-lg-10">
        
        <div class="card shadow-sm border mb-4" style="border-radius: 10px;">
            
            <div class="card-header card-header-modern d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="page-heading mb-1">@Model.ProjectName</h3>
                    <div class="text-muted small">
                        <i class="bi bi-building me-1"></i> @Model.Client
                    </div>
                </div>
                
                <a asp-action="MyProjects" class="btn btn-sm btn-light border text-muted fw-semibold shadow-sm">
                    <i class="bi bi-arrow-left me-1"></i> Back to List
                </a>
            </div>

            <div class="card-body p-4">
                
                <div class="row g-4">
                    <div class="col-md-7 border-end-md">
                        <h6 class="fw-bold text-dark mb-3">Assignment Details</h6>
                        
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="detail-label">Your Role</div>
                                <div class="detail-value">@(Model.Role ?? "Not Specified")</div>
                            </div>
                            
                            <div class="col-6">
                                <div class="detail-label">Assigned On</div>
                                <div class="detail-value">@Model.AssignedOn.ToShortDateString()</div>
                            </div>
                            
                            <div class="col-6">
                                <div class="detail-label">Deadline</div>
                                <div class="detail-value text-danger">
                                    <i class="bi bi-calendar-event me-1"></i>@(Model.ProjectDeadline?.ToShortDateString() ?? "No Date")
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-5">
                        <h6 class="fw-bold text-dark mb-3">Management</h6>
                        
                        <div class="action-box p-3">
                            <div class="d-flex align-items-center mb-2 text-warning-emphasis">
                                <i class="bi bi-exclamation-circle-fill me-2"></i>
                                <span class="fw-bold small text-uppercase">Request Release</span>
                            </div>
                            <p class="small text-muted mb-3" style="line-height:1.4;">
                                Need to be unassigned? Submit a request to the admin below.
                            </p>

                            <form asp-action="RequestRelease" method="post">
                                <input type="hidden" name="assignmentId" value="@Model.AssignmentId" />
                                
                                <div class="mb-2">
                                    <textarea name="comment" 
                                              class="form-control bg-white" 
                                              rows="2" 
                                              placeholder="Reason for release (optional)..."
                                              style="font-size: 0.9rem; resize: none;"></textarea>
                                </div>
                                
                                <div class="text-end">
                                    <button type="submit" class="btn btn-sm btn-warning text-dark fw-bold shadow-sm w-100">
                                        Submit Request
                                    </button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>

            </div>
        </div>

    </div>
</div>