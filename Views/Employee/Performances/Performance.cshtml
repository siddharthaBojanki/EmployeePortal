@using EmployeePortal.ViewModels.EmployeeViewModels
@model IEnumerable<PerformanceViewModel>

@{
    ViewData["Title"] = "My Performance";
}

<style>
    /* Custom Header Style */
    .card-header-modern {
        background-color: #f8fafc; /* Very light grey-blue background */
        border-bottom: 1px solid #e2e8f0;
        padding: 1.5rem;
        border-radius: 10px 10px 0 0; /* Match card radius */
    }

    .page-heading {
        color: #005B99; /* Primary Theme Color */
        font-weight: 700;
        letter-spacing: -0.5px;
    }

    /* --- NEW: Stat Chips Styles --- */
    .stat-chip {
        background-color: #ffffff;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        padding: 8px 16px;
        display: flex;
        align-items: center;
        gap: 12px;
        box-shadow: 0 1px 2px rgba(0,0,0,0.02);
    }

    .stat-chip-icon {
        width: 36px;
        height: 36px;
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
    }
</style>

<div class="row">
    <div class="col-12">

        <div class="card shadow-sm border mb-4" style="border-radius: 10px;">

            <div class="card-header card-header-modern d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                <div>
                    <h3 class="page-heading mb-1">Performance Reviews</h3>
                    <p class="text-muted small mb-0">Track your ratings and feedback history.</p>
                </div>

                @if (Model != null && Model.Any())
                {
                    <div class="d-flex gap-3">
                        <div class="stat-chip">
                            <div class="stat-chip-icon" style="background-color: #FFFBEB; color: #D97706;">
                                <i class="bi bi-star-fill"></i>
                            </div>
                            <div>
                                <div class="text-muted text-uppercase fw-bold" style="font-size: 0.65rem; letter-spacing: 0.5px;">Average</div>
                                <div class="fw-bold text-dark fs-6">
                                    @Model.Average(x => x.Rating).ToString("0.0")
                                    <span class="text-muted fw-normal small">/ 5</span>
                                </div>
                            </div>
                        </div>

                        <div class="stat-chip">
                            <div class="stat-chip-icon" style="background-color: #E6F2FA; color: #005B99;">
                                <i class="bi bi-clipboard-data-fill"></i>
                            </div>
                            <div>
                                <div class="text-muted text-uppercase fw-bold" style="font-size: 0.65rem; letter-spacing: 0.5px;">Total</div>
                                <div class="fw-bold text-dark fs-6">
                                    @Model.Count()
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="card-body p-0">
                @if (!(Model?.Any() ?? false))
                {
                    <div class="text-center py-5">
                        <i class="bi bi-clipboard-x fs-3 text-muted mb-2 d-block opacity-50"></i>
                        <span class="text-muted">No performance records found.</span>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-white">
                                <tr>
                                    <th class="ps-4 py-3 text-muted small fw-bold text-uppercase border-bottom" style="width: 15%;">Date</th>
                                    <th class="py-3 text-muted small fw-bold text-uppercase border-bottom" style="width: 20%;">Rating</th>
                                    <th class="py-3 text-muted small fw-bold text-uppercase border-bottom" style="width: 45%;">Feedback</th>
                                    <th class="pe-4 py-3 text-end text-muted small fw-bold text-uppercase border-bottom" style="width: 20%;">Reviewed By</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var r in Model.OrderByDescending(x => x.ReviewDate))
                                {
                                    <tr>
                                        <td class="ps-4 border-bottom-0">
                                            <div class="fw-semibold text-dark">@r.ReviewDate.ToString("MMM dd, yyyy")</div>
                                        </td>

                                        <td class="border-bottom-0">
                                            <div class="d-flex align-items-center gap-2">
                                                <div class="d-flex text-warning" style="font-size: 0.9rem;">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= r.Rating)
                                                        {
                                                            <i class="bi bi-star-fill"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="bi bi-star text-muted opacity-25"></i>
                                                        }
                                                    }
                                                </div>
                                                <span class="fw-bold text-dark small">@r.Rating.ToString("0.0")</span>
                                            </div>
                                        </td>

                                        <td class="border-bottom-0">
                                            @if (!string.IsNullOrWhiteSpace(r.Feedback))
                                            {
                                                <div class="text-secondary small text-truncate" style="max-width: 450px;" title="@r.Feedback">
                                                    @r.Feedback
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted small fst-italic">No feedback provided.</span>
                                            }
                                        </td>

                                        <td class="text-end pe-4 border-bottom-0">
                                            @if (!string.IsNullOrWhiteSpace(r.ReviewedByName))
                                            {
                                                <div class="d-flex align-items-center justify-content-end gap-2">
                                                    <span class="small fw-semibold text-dark">@r.ReviewedByName</span>
                                                    <div class="rounded-circle bg-light border d-flex align-items-center justify-content-center text-muted small"
                                                         style="width: 28px; height: 28px; font-size: 0.75rem;">
                                                        @r.ReviewedByName.Substring(0, 1).ToUpper()
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted small">-</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>