@model EmployeePortal.Models.Department
@{
    ViewData["Title"] = "Create Department";
}

<style>
    /* Standardized Header Style */
    .card-header-modern {
        background-color: #f8fafc; /* Very light grey-blue */
        border-bottom: 1px solid #e2e8f0;
        padding: 1.5rem;
        border-radius: 10px 10px 0 0;
    }

    .page-heading {
        color: #005B99; /* Primary Theme Color */
        font-weight: 700;
        letter-spacing: -0.5px;
        font-size: 1.35rem;
    }
</style>

<div class="row justify-content-center mt-5 mb-5">
    <div class="col-md-8 col-lg-6">

        <div class="card shadow-sm border mb-4" style="border-radius: 10px;">

            <div class="card-header card-header-modern d-flex align-items-center gap-3">
                <div class="d-inline-flex align-items-center justify-content-center rounded-circle"
                     style="width: 48px; height: 48px; background-color: #E6F2FA; color: #005B99;">
                    <i class="bi bi-building-add fs-4"></i>
                </div>
                <div>
                    <h3 class="page-heading mb-0">Create Department</h3>
                    <p class="text-muted small mb-0">Add a new operational unit to the organization.</p>
                </div>
            </div>

            <div class="card-body p-4">

                <form asp-action="CreateDepartment" method="post" novalidate>

                    <div class="mb-4">
                        <label asp-for="Name" class="form-label fw-semibold text-secondary small text-uppercase">Department Name</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-tag"></i></span>
                            <input asp-for="Name" class="form-control border-start-0 ps-0" placeholder="e.g. Human Resources" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="d-flex justify-content-end gap-2 pt-2 border-top">
                        <a asp-action="Departments" class="btn btn-light border text-muted px-4">Back</a>
                        <button type="submit" class="btn btn-primary fw-semibold px-4 shadow-sm">
                            <i class="bi bi-check2 me-1"></i> Create
                        </button>
                    </div>

                </form>

            </div>

        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}