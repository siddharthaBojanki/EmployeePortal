@model EmployeePortal.Models.Department
@{
    ViewData["Title"] = "Delete Department";
}

<style>
    /* Reuse Modern Header Style */
    .card-header-modern {
        background-color: #f8fafc;
        border-bottom: 1px solid #e2e8f0;
        padding: 1.5rem;
        border-radius: 10px 10px 0 0;
    }

    .page-heading {
        color: #0f172a; /* Dark text for delete page to be serious */
        font-weight: 700;
        letter-spacing: -0.5px;
        font-size: 1.35rem;
    }

    .detail-label {
        color: #64748b;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.5px;
        margin-bottom: 4px;
    }

    .detail-value {
        color: #0f172a;
        font-weight: 600;
        font-size: 1.1rem;
    }
</style>

<div class="row justify-content-center mt-5">
    <div class="col-md-8 col-lg-6">

        <div class="card shadow-sm border mb-4" style="border-radius: 10px;">

            <div class="card-header card-header-modern d-flex align-items-center gap-3">
                <div class="d-inline-flex align-items-center justify-content-center rounded-circle"
                     style="width: 48px; height: 48px; background-color: #FEF2F2; color: #DC2626;">
                    <i class="bi bi-trash3-fill fs-4"></i>
                </div>
                <div>
                    <h3 class="page-heading mb-0">Delete Department</h3>
                    <p class="text-muted small mb-0">This action involves permanent data loss.</p>
                </div>
            </div>

            <div class="card-body p-4">

                <div class="alert alert-danger border-0 d-flex align-items-start mb-4" role="alert" style="background-color: #FEF2F2; color: #991B1B;">
                    <i class="bi bi-exclamation-triangle-fill flex-shrink-0 me-3 mt-1"></i>
                    <div>
                        <div class="fw-bold">Are you absolutely sure?</div>
                        <div class="small opacity-75">
                            This action cannot be undone. This will permanently delete the department from the database.
                        </div>
                    </div>
                </div>

                <div class="p-3 bg-light border rounded-3 mb-4">
                    <div class="detail-label">Department Name</div>
                    <div class="detail-value">@Model.Name</div>
                </div>

                <form asp-action="DeleteConfirmedDepartment" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />

                    <div class="d-flex justify-content-end gap-2 pt-2 border-top">
                        <a asp-action="Departments" class="btn btn-light border text-muted px-4">
                            Cancel
                        </a>
                        <button type="submit" class="btn btn-danger fw-semibold px-4 shadow-sm">
                            Confirm Delete
                        </button>
                    </div>
                </form>

            </div>
        </div>

    </div>
</div>