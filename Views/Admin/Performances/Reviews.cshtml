@model IEnumerable<EmployeePortal.Models.PerformanceReview>
@using EmployeePortal.Models
@{
    ViewData["Title"] = "Performance Reviews";
}

<style>
    /* --- Modern Header Style --- */
    .card-header-modern {
        background-color: #f8fafc; /* Very light grey-blue */
        border-bottom: 1px solid #e2e8f0;
        padding: 1.5rem;
        border-radius: 10px 10px 0 0;
    }

    .page-heading {
        color: #005B99; /* Primary Theme Color */
        font-weight: 700;
        letter-spacing: -0.5px;
        font-size: 1.35rem;
    }

    /* --- Table Styles --- */
    .table-responsive {
        /* Ensuring internal padding is tight */
        padding: 0 0.5rem;
    }

    .table th {
        font-weight: 600;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: #64748b; /* Muted slate */
    }

    .table td {
        font-size: 0.95rem;
        vertical-align: middle;
        color: #334155; /* Dark slate */
        padding-top: 0.75rem;
        padding-bottom: 0.75rem;
    }

    /* --- Rating Visualization --- */
    .star-rating-container {
        color: #f6b91a; /* Gold/Warning color */
        font-size: 0.95rem;
    }

    .rating-num {
        font-weight: 700;
        margin-left: 6px;
        color: #0f172a; /* Ink Black */
    }
</style>

<div class="row justify-content-center">
    <div class="col-12">

        <div class="card shadow-sm border mb-4" style="border-radius: 10px;">

            <div class="card-header card-header-modern d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="page-heading mb-1">Performance Reviews</h3>
                    <p class="text-muted small mb-0">Recent ratings and feedback for employees.</p>
                </div>

                <a asp-action="CreateReview" class="btn btn-primary btn-sm px-4 fw-semibold shadow-sm">
                    <i class="bi bi-plus-lg me-1"></i> Add Review
                </a>
            </div>

            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-white">
                            <tr>
                                <th class="ps-4 py-3 border-bottom">Employee</th>
                                <th class="py-3 border-bottom">Reviewer</th>
                                <th class="py-3 border-bottom">Date</th>
                                <th class="py-3 border-bottom">Rating</th>
                                <th class="py-3 border-bottom">Feedback</th>
                                <th class="pe-4 py-3 text-end border-bottom">Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="6" class="text-center text-muted py-5">
                                        <i class="bi bi-award fs-4 d-block mb-2 opacity-50"></i>
                                        No performance reviews found.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (var r in Model)
                                {
                                    <tr>
                                        <td class="ps-4 fw-semibold">@r.Employee?.FullName</td>
                                        <td>@(r.ReviewedByEmployee?.FullName ?? "(self / admin)")</td>
                                        <td>@r.ReviewDate.ToShortDateString()</td>

                                        <td style="min-width:140px;">
                                            <div class="d-flex align-items-center">
                                                <div class="star-rating-container d-flex">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= r.Rating)
                                                        {
                                                            <i class="bi bi-star-fill" aria-hidden="true"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="bi bi-star" style="color: #94a3b8;" aria-hidden="true"></i>
                                                        }
                                                    }
                                                </div>
                                                <div class="rating-num">@r.Rating.ToString("0.0")</div>
                                            </div>
                                        </td>

                                        <td class="text-muted text-truncate" style="max-width: 250px;">
                                            @(!string.IsNullOrWhiteSpace(r.Feedback) ? r.Feedback : "-")
                                        </td>

                                        <td class="text-end pe-4">
                                            <form asp-action="DeleteReview" method="post" onsubmit="return confirm('Delete this review?');" class="d-inline">
                                                <input type="hidden" name="id" value="@r.Id" />
                                                <button type="submit" class="btn btn-sm btn-light border text-danger fw-semibold" title="Delete Review">
                                                    <i class="bi bi-trash3"></i> Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>