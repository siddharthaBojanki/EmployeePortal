@model EmployeePortal.ViewModels.AdminViewModels.CreateAnnouncementModel

@{
    ViewData["Title"] = "Create Announcement";
}

<style>
    /* Standardized Header Style */
    .card-header-modern {
        background-color: #f8fafc; /* Very light grey-blue */
        border-bottom: 1px solid #e2e8f0;
        padding: 1.5rem;
        border-radius: 10px 10px 0 0;
    }

    .page-heading {
        color: #005B99; /* Primary Theme Color */
        font-weight: 700;
        letter-spacing: -0.5px;
        font-size: 1.35rem;
    }
</style>

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">

        <div class="card shadow-sm border mb-4" style="border-radius: 10px;">

            <div class="card-header card-header-modern d-flex align-items-center gap-3">
                <div class="d-inline-flex align-items-center justify-content-center rounded-circle"
                     style="width: 48px; height: 48px; background-color: #E6F2FA; color: #005B99;">
                    <i class="bi bi-megaphone-fill fs-4"></i>
                </div>
                <div>
                    <h3 class="page-heading mb-0">New Announcement</h3>
                    <p class="text-muted small mb-0">Broadcast a message to all employees.</p>
                </div>
            </div>

            <div class="card-body p-4">
                <form asp-action="CreateAnnouncement" method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small mb-4" role="alert"></div>

                    <div class="mb-4">
                        <label asp-for="Title" class="form-label fw-semibold text-secondary small text-uppercase">Subject</label>
                        <input asp-for="Title" class="form-control" placeholder="Enter a catchy title..." />
                        <span asp-validation-for="Title" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Message" class="form-label fw-semibold text-secondary small text-uppercase">Message Body</label>
                        <textarea asp-for="Message"
                                  class="form-control"
                                  rows="6"
                                  style="resize: none;"
                                  placeholder="Type your announcement details here..."></textarea>
                        <span asp-validation-for="Message" class="text-danger small mt-1 d-block"></span>
                    </div>


                    <div class="d-flex justify-content-end gap-2 pt-2 border-top">
                        <a asp-action="Announcements" asp-controller="Admin" class="btn btn-light border text-muted px-4">
                            Cancel
                        </a>
                        <button type="submit" class="btn btn-primary fw-semibold px-4 shadow-sm">
                            <i class="bi bi-send-fill me-1"></i> Publish
                        </button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}