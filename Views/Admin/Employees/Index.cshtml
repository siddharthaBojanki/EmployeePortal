@model IEnumerable<EmployeePortal.Models.Employee>
@{
    ViewData["Title"] = "Employees (Admin)";
}

<style>
    /* Modern Header */
    .card-header-modern {
        background-color: #f8fafc; /* Very light grey-blue */
        border-bottom: 1px solid #e2e8f0;
        padding: 1.5rem;
        border-radius: 10px 10px 0 0;
    }

    .page-heading {
        color: #005B99; /* Primary Theme Color */
        font-weight: 700;
        letter-spacing: -0.5px;
        font-size: 1.35rem;
    }

    /* Table Styles */
    .table th {
        font-weight: 600;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: #64748b;
    }

    .table td {
        font-size: 0.95rem;
        vertical-align: middle;
        color: #334155;
    }

    /* Actions Links */
    .action-link {
        font-size: 0.85rem;
        font-weight: 600;
        text-decoration: none;
        padding: 6px 10px;
        border-radius: 6px;
        transition: background-color 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 4px;
    }

        .action-link:hover {
            background-color: #f1f5f9;
            text-decoration: none;
        }
</style>

<div class="row justify-content-center">
    <div class="col-12">

        <div class="card shadow-sm border mb-4" style="border-radius: 10px;">

            <div class="card-header card-header-modern d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="page-heading mb-1">Employees</h3>
                    <p class="text-muted small mb-0">Manage user accounts and access.</p>
                </div>

                <a asp-action="Create" class="btn btn-primary btn-sm px-4 fw-semibold shadow-sm">
                    <i class="bi bi-person-plus-fill me-1"></i> Add Employee
                </a>
            </div>

            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-white">
                            <tr>
                                <th class="ps-4 py-3 border-bottom">Name</th>
                                <th class="py-3 border-bottom">Email</th>
                                <th class="py-3 border-bottom">Department</th>
                                <th class="py-3 border-bottom">Joined</th>
                                <th class="py-3 border-bottom text-center">Status</th>
                                <th class="pe-4 py-3 text-end border-bottom">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var e in Model.Where(e => e.Role == RoleType.Employee))
                            {
                                <tr>
                                    <td class="ps-4 border-bottom-0">
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="rounded-circle bg-light border d-flex align-items-center justify-content-center text-primary fw-bold small"
                                                 style="width: 32px; height: 32px;">
                                                @e.FullName.Substring(0, 1).ToUpper()
                                            </div>
                                            <span class="fw-semibold text-dark">@e.FullName</span>
                                        </div>
                                    </td>

                                    <td class="border-bottom-0 text-muted">
                                        @if (!string.IsNullOrWhiteSpace(e.User?.Email))
                                        {
                                            <span>@e.User.Email</span>
                                        }
                                        else
                                        {

                                            <span class="text-muted small fst-italic">-</span>
                                        }
                                    </td>

                                    <td class="border-bottom-0">
                                        @if (!string.IsNullOrWhiteSpace(e.Department?.Name))
                                        {
                                            <span class="badge bg-light text-secondary border fw-normal">@e.Department.Name</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">-</span>
                                        }
                                    </td>

                                    <td class="border-bottom-0 text-muted small">
                                        @e.DateOfJoining.ToShortDateString()
                                    </td>

                                    <td class="border-bottom-0 text-center">
                                        @if (e.IsActive)
                                        {
                                            <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 rounded-pill" style="font-size:0.7rem;">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary border-opacity-25 rounded-pill" style="font-size:0.7rem;">Inactive</span>
                                        }
                                    </td>

                                    <td class="text-end pe-4 border-bottom-0">
                                        <a asp-action="Details" asp-route-id="@e.Id" class="action-link text-primary me-1">
                                            <i class="bi bi-eye"></i> Details
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@e.Id" class="action-link text-secondary me-1">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@e.Id" class="action-link text-danger">
                                            <i class="bi bi-trash3"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>