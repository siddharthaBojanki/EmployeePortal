@model IEnumerable<EmployeePortal.Models.WfhRequest>
@using EmployeePortal.Models
@{
    ViewData["Title"] = "WFH Requests";
}

@functions {
    private string StatusBadgeClass(RequestStatus status)
    {
        return status switch
        {
            RequestStatus.Approved => "badge bg-success text-white fw-semibold",
            RequestStatus.Rejected => "badge bg-danger text-white fw-semibold",
            RequestStatus.Pending => "badge bg-warning text-dark fw-semibold",
            _ => "badge bg-secondary text-white fw-semibold"
        };
    }
}

<style>
    /* --- Modern Header --- */
    .card-header-modern {
        background-color: #f8fafc;
        border-bottom: 1px solid #e2e8f0;
        padding: 1.5rem;
        border-radius: 10px 10px 0 0;
    }

    .page-heading {
        color: #005B99;
        font-weight: 700;
        letter-spacing: -0.5px;
        font-size: 1.35rem;
    }

    /* --- Action Box --- */
    .action-group {
        display: flex;
        align-items: center;
        background-color: #ffffff;
        border: 1px solid #cbd5e1;
        border-radius: 6px;
        padding: 3px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        width: fit-content;
        margin-left: auto;
        gap: 2px;
    }

    /* Input Field inside Action Box */
    .form-control-action {
        border: none;
        background-color: #f1f5f9;
        border-radius: 4px;
        font-size: 0.85rem;
        padding: 6px 8px;
        min-width: 120px;
        margin-right: 4px;
        color: #334155;
    }

        .form-control-action:focus {
            box-shadow: inset 0 0 0 1px #005B99;
            background-color: #fff;
        }

    /* Buttons */
    .btn-action-text {
        font-size: 0.85rem;
        font-weight: 600;
        padding: 6px 10px;
        border-radius: 4px;
        transition: all 0.2s;
    }

    .clickable-request-row {
        cursor: pointer;
        transition: background-color 0.2s;
    }

        .clickable-request-row:hover {
            background-color: #F8FAFC !important;
        }
</style>

<div class="row justify-content-center">
    <div class="col-12">

        <div class="card shadow-sm border mb-4" style="border-radius: 10px;">

            <div class="card-header card-header-modern">
                <h3 class="page-heading mb-1">WFH Requests</h3>
                <p class="text-muted small mb-0">Review and manage work from home applications.</p>
            </div>

            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-white">
                            <tr>
                                <th class="ps-4 py-3 border-bottom text-muted small fw-bold text-uppercase" style="width: 22%;">Employee</th>
                                <th class="py-3 border-bottom text-muted small fw-bold text-uppercase" style="width: 20%;">Date</th>
                                <th class="py-3 border-bottom text-muted small fw-bold text-uppercase" style="width: 10%;">Reason</th>
                                <th class="py-3 border-bottom text-muted small fw-bold text-uppercase" style="width: 12%;">Status</th>
                                <th class="pe-4 py-3 text-end border-bottom text-muted small fw-bold text-uppercase" style="width: 36%;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-5 text-muted small">
                                        <i class="bi bi-inbox fs-4 d-block mb-2 opacity-50"></i>
                                        No WFH requests found.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (var w in Model)
                                {
                                    var reason = string.IsNullOrWhiteSpace(w.Reason) ? "Reason not provided" : w.Reason;
                                    var encodedReason = Uri.EscapeDataString(reason);

                                    <tr class="clickable-request-row"
                                        onclick="openAdminRequestModal(this)"
                                        data-type="WFH"
                                        data-employee="@w.Employee?.FullName"
                                        data-dates="@w.Date.ToString("MMM dd, yyyy")"
                                        data-userreason="@encodedReason"
                                        data-status="@w.Status"
                                        data-applied="@w.RequestedOn.ToString("MMM dd, yyyy")">

                                        <td class="ps-4 border-bottom-0">
                                            <div class="fw-bold text-dark">@w.Employee?.FullName</div>
                                        </td>

                                        <td class="border-bottom-0">
                                            <span class="fw-semibold text-dark">@w.Date.ToString("MMM dd, yyyy")</span>
                                        </td>

                                        <td class="border-bottom-0">
                                            <div class="text-truncate text-secondary" style="max-width: 150px;" title="@w.Reason">
                                                @(string.IsNullOrWhiteSpace(w.Reason) ? "-" : w.Reason)
                                            </div>
                                        </td>

                                        <td class="border-bottom-0">
                                            <span class="@StatusBadgeClass(w.Status) rounded-pill px-2">@w.Status</span>
                                        </td>

                                        <td class="text-end pe-4 border-bottom-0" onclick="event.stopPropagation()">
                                            @if (w.Status == RequestStatus.Pending)
                                            {
                                                <form method="post" class="action-group">
                                                    <input type="hidden" name="id" value="@w.Id" />

                                                    <input name="comment"
                                                           class="form-control-action"
                                                           placeholder="Comment..."
                                                           autocomplete="off"
                                                           onclick="event.stopPropagation()" />

                                                    <button type="submit" asp-action="ApproveWfh" class="btn-action-text btn-success fw-semibold" title="Approve">
                                                        Approve
                                                    </button>

                                                    <button type="submit" asp-action="RejectWfh" class="btn-action-text btn-danger fw-semibold" title="Reject">
                                                        Reject
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <span class="text-muted small fst-italic">Processed</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script>
        function openAdminRequestModal(row) {
            // 1. GET DATA
            const employee = row.getAttribute('data-employee');
            const type = row.getAttribute('data-type');
            const dates = row.getAttribute('data-dates');
            const status = row.getAttribute('data-status');
            const applied = row.getAttribute('data-applied');

            const encodedReason = row.getAttribute('data-userreason') || '';
            const userReason = decodeURIComponent(encodedReason);

            // 2. POPULATE USING UNIQUE IDs (adm_ prefix)
            document.getElementById('adm_employee').textContent = employee;
            document.getElementById('adm_type').textContent = type;
            document.getElementById('adm_dates').textContent = dates;
            document.getElementById('adm_applied').textContent = applied;
            document.getElementById('adm_reason').textContent = userReason;

            // 3. STATUS BADGE
            const statusBadge = document.getElementById('adm_status');
            statusBadge.textContent = status;
            statusBadge.className = 'badge rounded-pill px-3 py-2 fs-6 fw-semibold';

            const s = status.toLowerCase();
            if (s === 'approved') statusBadge.classList.add('bg-success', 'text-white');
            else if (s === 'pending') statusBadge.classList.add('bg-warning', 'text-dark');
            else statusBadge.classList.add('bg-danger', 'text-white');

            // 4. SHOW MODAL
            if (typeof bootstrap !== 'undefined') {
                const modalEl = document.getElementById('adminRequestModal');
                let modalInstance = bootstrap.Modal.getInstance(modalEl);
                if (!modalInstance) {
                    modalInstance = new bootstrap.Modal(modalEl);
                }
                modalInstance.show();
            } else {
                console.error('Bootstrap JS not loaded');
            }
        }
    </script>
}