@model EmployeePortal.Models.Project
@{
    ViewData["Title"] = "Create Project";
}

<style>
    /* Standardized Header Style */
    .card-header-modern {
        background-color: #f8fafc; /* Very light grey-blue */
        border-bottom: 1px solid #e2e8f0;
        padding: 1.5rem;
        border-radius: 10px 10px 0 0;
    }

    .page-heading {
        color: #005B99; /* Primary Theme Color */
        font-weight: 700;
        letter-spacing: -0.5px;
        font-size: 1.35rem;
    }

    /* Input Group Padding Fix */
    .form-label {
        font-weight: 600;
        font-size: 0.9rem;
        text-transform: uppercase;
        color: #64748b;
    }
</style>

<div class="row justify-content-center mt-4">
    <div class="col-lg-10 col-xl-8">

        <div class="card shadow-sm border mb-4" style="border-radius: 10px;">

            <div class="card-header card-header-modern d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center gap-3">
                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle"
                         style="width: 48px; height: 48px; background-color: #E6F2FA; color: #005B99;">
                        <i class="bi bi-kanban-fill fs-4"></i>
                    </div>
                    <div>
                        <h3 class="page-heading mb-0">Create Project</h3>
                        <p class="text-muted small mb-0">Define a new project for employee assignments.</p>
                    </div>
                </div>

                <a asp-action="Projects" class="btn btn-light border text-muted btn-sm px-4 shadow-sm">
                    Back
                </a>
            </div>

            <div class="card-body p-4">
                <form asp-action="CreateProject" method="post" novalidate>

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small mb-4" role="alert"></div>

                    <div class="mb-4">
                        <label asp-for="Name" class="form-label">Project Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter project name" />
                        <span asp-validation-for="Name" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Client" class="form-label">Client Name</label>
                        <input asp-for="Client" class="form-control" placeholder="Enter client name" />
                        <span asp-validation-for="Client" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label asp-for="StartDate" class="form-label">Start Date</label>
                            <input asp-for="StartDate" type="date" class="form-control" />
                            <span asp-validation-for="StartDate" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Deadline" class="form-label">Deadline</label>
                            <input asp-for="Deadline" type="date" class="form-control" />
                            <span asp-validation-for="Deadline" class="text-danger small mt-1 d-block"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter project description"></textarea>
                        <span asp-validation-for="Description" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="d-flex justify-content-end gap-2 pt-3 border-top">
                        <a asp-action="Projects" class="btn btn-light border text-muted px-4">Cancel</a>
                        <button type="submit" class="btn btn-primary fw-semibold px-4 shadow-sm">
                            <i class="bi bi-check-lg me-1"></i> Create Project
                        </button>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}