@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-4">

        <div class="card shadow-sm border-0 text-center">
            <div class="card-body p-5">

                <div class="mb-4">
                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle"
                         style="width: 80px; height: 80px; background-color: #F0F8FF; color: #005B99;">
                        <i class="bi bi-box-arrow-right fs-1"></i>
                    </div>
                </div>

                @{
                    if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <h2 class="h4 fw-bold mb-3 text-dark">Sign Out?</h2>
                        <p class="text-muted mb-4">Are you sure you want to sign out of the application?</p>

                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                            <button type="submit" class="btn btn-danger w-100 fw-semibold py-2">
                                <i class="bi bi-power me-2"></i> Confirm Logout
                            </button>
                            <a href="/" class="btn btn-link text-muted mt-3 text-decoration-none small">Cancel</a>
                        </form>
                    }
                    else
                    {
                        <h2 class="h4 fw-bold mb-3 text-dark">Signed Out</h2>
                        <p class="text-muted mb-4">You have successfully logged out of the application.</p>

                        <a asp-page="/Account/Login" class="btn btn-primary w-100 fw-semibold py-2">
                            Return to Login
                        </a>

                        <div class="mt-4 pt-3 border-top">
                            <p class="small text-muted mb-0">
                                You can close this window now.
                            </p>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>