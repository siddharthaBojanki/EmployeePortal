@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null; /* Standalone layout for focus */
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmployeePortal</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        /* --- THEME: DREAMY DUSK (High Contrast Login) --- */
        :root {
            --primary: #005B99; /* Deep Blue */
            --primary-hover: #004a80;
            --bg-surface: #ffffff;
            --text-main: #0f172a; /* Ink Black */
            --text-muted: #64748b; /* Slate */
            --border-color: #cbd5e1; /* Visible Borders */
        }

        body, html {
            height: 100%;
            font-family: 'Inter', sans-serif;
            background-color: var(--bg-surface);
            color: var(--text-main);
            overflow-x: hidden;
        }

        /* --- LEFT SIDEBAR (Branding) --- */
        .login-sidebar {
            background: linear-gradient(135deg, #005B99 0%, #003366 100%);
            color: white;
            position: relative;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

            /* Abstract Shapes for Professional Look */
            .login-sidebar::before {
                content: '';
                position: absolute;
                top: -100px;
                left: -100px;
                width: 400px;
                height: 400px;
                background: radial-gradient(circle, rgba(255,255,255,0.08) 0%, rgba(255,255,255,0) 70%);
                border-radius: 50%;
            }

            .login-sidebar::after {
                content: '';
                position: absolute;
                bottom: -50px;
                right: -50px;
                width: 300px;
                height: 300px;
                background: radial-gradient(circle, rgba(255,255,255,0.08) 0%, rgba(255,255,255,0) 70%);
                border-radius: 50%;
            }

        /* Glassmorphism Feature Cards */
        .feature-card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            padding: 1rem 1.25rem;
            border-radius: 12px;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 15px;
            transition: transform 0.3s ease;
        }

            .feature-card:hover {
                transform: translateX(5px);
                background: rgba(255, 255, 255, 0.15);
            }

        .feature-icon {
            font-size: 1.25rem;
            color: #A4C8E1; /* Soft Blue Accent */
        }

        /* --- RIGHT SIDE (Form) --- */
        .login-section {
            background-color: #ffffff;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .login-wrapper {
            width: 100%;
            max-width: 420px;
            padding: 2rem;
            animation: fadeIn 0.6s ease-out;
        }

        /* --- FORM CONTROLS --- */
        h2 {
            font-weight: 700;
            color: var(--primary);
        }

        p.text-muted {
            font-size: 0.95rem;
        }

        .form-floating > .form-control {
            border: 1px solid var(--border-color);
            border-radius: 8px;
            height: calc(3.5rem + 2px);
            line-height: 1.25;
            color: var(--text-main);
            font-weight: 500;
        }

            .form-floating > .form-control:focus {
                border-color: var(--primary);
                box-shadow: 0 0 0 4px rgba(0, 91, 153, 0.1);
            }

        .form-floating > label {
            color: var(--text-muted);
            padding-top: 0.6rem;
        }

        /* --- BUTTONS --- */
        .btn-primary-custom {
            background-color: var(--primary);
            border-color: var(--primary);
            color: white;
            padding: 0.75rem;
            font-weight: 600;
            border-radius: 8px;
            font-size: 1rem;
            box-shadow: 0 4px 6px rgba(0, 91, 153, 0.2);
            transition: all 0.2s;
        }

            .btn-primary-custom:hover {
                background-color: var(--primary-hover);
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(0, 91, 153, 0.25);
                color: white;
            }

        .link-primary-custom {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
            font-size: 0.9rem;
        }

            .link-primary-custom:hover {
                text-decoration: underline;
                color: var(--primary-hover);
            }

        /* --- ANIMATION --- */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>

    <div class="container-fluid h-100 p-0">
        <div class="row g-0 h-100">

            <div class="col-lg-6 d-none d-lg-flex login-sidebar px-5">
                <div class="position-relative" style="z-index: 2; max-width: 500px; margin: 0 auto;">

                    <div class="d-flex align-items-center gap-3 mb-4">
                        <div class="bg-white rounded-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                            <i class="bi bi-buildings-fill text-primary fs-3"></i>
                        </div>
                        <h1 class="h3 fw-bold mb-0 text-white tracking-tight">EmployeePortal</h1>
                    </div>

                    <h2 class="display-6 fw-bold mb-3 text-white">Your Workspace, <br />Reimagined.</h2>
                    <p class="lead mb-5 text-white opacity-75 fs-6">
                        Manage projects, apply leaves, work from homes and review performance in one unified platform.
                    </p>

                    <div class="feature-card">
                        <i class="bi bi-speedometer2 feature-icon"></i>
                        <div>
                            <div class="fw-bold text-white">Real-time Dashboard</div>
                            <small class="text-white opacity-75">Instant overview of your activities.</small>
                        </div>
                    </div>

                    <div class="feature-card">
                        <i class="bi bi-calendar-check feature-icon"></i>
                        <div>
                            <div class="fw-bold text-white">Leave Management</div>
                            <small class="text-white opacity-75">Apply for leaves and track WFH requests.</small>
                        </div>
                    </div>

                    
                </div>
            </div>

            <div class="col-lg-6 login-section">
                <div class="login-wrapper">

                    <div class="d-lg-none text-center mb-4">
                        <h2 class="fw-bold text-primary">EmployeePortal</h2>
                    </div>

                    <div class="mb-4">
                        <h3 class="fw-bold mb-1" style="color: #0f172a;">Welcome Back</h3>
                        <p class="text-muted">Please enter your details to sign in.</p>
                    </div>

                    <form id="account" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small border-0 shadow-sm" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" autocomplete="username" />
                            <label asp-for="Input.Email">Email Address</label>
                            <span asp-validation-for="Input.Email" class="text-danger small ps-1"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" placeholder="Password" autocomplete="current-password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger small ps-1"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe" id="rememberMeCheck" />
                                <label class="form-check-label text-muted small" for="rememberMeCheck">
                                    Remember me
                                </label>
                            </div>
                        </div>

                        <div class="d-grid mb-4">
                            <button id="login-submit" type="submit" class="btn btn-primary-custom">
                                Sign In
                            </button>
                        </div>

                        
                    </form>
                </div>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>