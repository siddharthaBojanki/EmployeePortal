@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-5">

        <div class="card shadow-sm border mb-4">
            <div class="card-body p-4 p-md-5">

                <div class="text-center mb-4">
                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle mb-3"
                         style="width: 60px; height: 60px; background-color: #E6F2FA; color: #005B99;">
                        <i class="bi bi-shield-lock-fill fs-3"></i>
                    </div>
                    <h3 class="fw-bold text-dark">Change Password</h3>
                    <p class="text-muted small">Update your credentials to keep your account secure.</p>
                </div>

                <partial name="_StatusMessage" for="StatusMessage" />

                <form id="change-password-form" method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger small py-2 mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Old password" />
                        <label asp-for="Input.OldPassword" class="form-label">Current Password</label>
                        <span asp-validation-for="Input.OldPassword" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="New password" />
                        <label asp-for="Input.NewPassword" class="form-label">New Password</label>
                        <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm password" />
                        <label asp-for="Input.ConfirmPassword" class="form-label">Confirm New Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary fw-semibold py-2">
                            Update Password
                        </button>
                        <a asp-controller="Employee" asp-action="Profile" class="btn btn-light border text-muted">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <div class="text-center">
            <p class="small text-muted">
                <i class="bi bi-info-circle me-1"></i> Make sure your new password is strong and unique.
            </p>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}